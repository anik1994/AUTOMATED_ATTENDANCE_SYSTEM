<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.casanova.myproject">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.HomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LodingScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.NewUserActivity" />
        <activity android:name=".activities.RegisteredActivity" />
        <activity android:name=".activities.AttendanceActivity" />
        <activity android:name=".activities.PollActivity" />
        <activity android:name=".activities.TestActivity" />
        <activity android:name=".activities.StatusActivity" />
        <activity android:name=".activities.GetPollQuestionActivity" />
        <activity android:name=".activities.AboutActivity"></activity>
    </application>

</manifest>